@model TodoApp.Models.TodoTask

@{
    ViewData["Title"] = "Edytuj zadanie";
}

<div class="container">
    <h2 class="my-4">Edytuj zadanie</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Title">Tytuł</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
        </div>
        <div class="form-group">
            <label for="Description">Opis</label>
            <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label for="DueDate">Data wykonania</label>
            <input type="text" class="form-control datepicker" id="DueDate" name="DueDate" value="@Model.DueDate.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="IsCompleted" name="IsCompleted" value="true" @(Model.IsCompleted ? "checked" : "") />
            <label class="form-check-label" for="IsCompleted">Zakończone</label>
        </div>
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="selectedDate" value="@ViewBag.SelectedDate" />
        <button type="submit" class="btn btn-primary">Zapisz</button>
    </form>
</div>

<script>
    $(document).ready(function() {
        $('.datepicker').datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true
        }).datepicker('setDate', '@Model.DueDate.ToString("yyyy-MM-dd")');
    });
</script>
